<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arifian.udacity.musicify">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayingActivity"
            android:label="@string/nav_playing"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".RecentActivity"
            android:label="@string/nav_recent"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".GenreActivity"
            android:label="@string/nav_genre"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ArtistsActivity"
            android:label="@string/nav_artists"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".PlaylistActivity"
            android:label="@string/nav_playlist"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>